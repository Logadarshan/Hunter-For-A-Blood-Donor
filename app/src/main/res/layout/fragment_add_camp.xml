<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/newsbg"
    tools:context=".Camp.AddCampFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <TextView
            android:id="@+id/title_camp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/aclonica"
            android:text="Campaign"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/camporg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_camp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittextbg"
            android:focusable="false"
            android:hint="Organization"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:visibility="invisible"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:textColor="@color/black"
            app:hintTextColor="@color/black">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginStart="9dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/orgicon"
                android:drawablePadding="20dp"
                android:focusable="false"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnercamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_camp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/campdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnercamp"
            android:background="@drawable/edittextbg"
            android:textColor="@color/black"
            android:hint="Campaign Date"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:focusable="false"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/camporgdate"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:focusable="false"
                android:drawableLeft="@drawable/dateicon"
                android:textColor="@color/black"
                android:layout_marginStart="9dp"
                android:drawablePadding="20dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/campdonorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdate"
            android:background="@drawable/edittextbg"
            android:textColor="@color/black"
            android:hint="Donor Name"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@drawable/nameicon"
                android:textColor="@color/black"
                android:layout_marginStart="9dp"
                android:drawablePadding="20dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/campdonorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonorname"
            android:background="@drawable/edittextbg"
            android:textColor="@color/black"
            android:hint="Donor Age"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@drawable/ageicon"
                android:textColor="@color/black"
                android:layout_marginStart="9dp"
                android:drawablePadding="20dp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/campdonorblood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonorage"
            android:background="@drawable/edittextbg"
            android:textColor="@color/black"
            android:hint="Donor Blood Group"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@drawable/bloodicon"
                android:textColor="@color/black"
                android:layout_marginStart="9dp"
                android:drawablePadding="20dp" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/campdonornum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonorblood"
            android:background="@drawable/edittextbg"
            android:textColor="@color/black"
            android:hint="Donor Number"
            android:textColorHint="@color/black"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@drawable/phoneicon"
                android:textColor="@color/black"
                android:layout_marginStart="9dp"
                android:drawablePadding="20dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/campstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addcampBtn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/stateicon"
            android:drawablePadding="10dp"
            android:hint="State"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="11dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <Button
            android:id="@+id/addcampBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonornum"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonsavebg"
            android:onClick="updateprofile"
            android:text="Save"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/viewcampBtn"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonornum"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="236dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/buttonbg"
            android:onClick="updateprofile"
            android:text="View\n Campaign"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addcampdetailsBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campdonornum"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="221dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/buttonbg"
            android:onClick="updateprofile"
            android:text="Add\n Campaign"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>