<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newsbg"
    tools:context=".Selftest.ViewResultFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/newsbg"
        android:padding="20dp">

        <TextView
            android:id="@+id/title_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/aclonica"
            android:gravity="left"
            android:text="View Result"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/resultquestion1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_result"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="1. Are you feeling healthy and well today?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/resultansquestion1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="2. Are you donating today to test your blood for HIV, Hepatitis and/or Syphilis?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="3. Have you donated blood before?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="4. If yes, have you had any problem during or after the donation?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="5. In the past one week, have you taken any medication?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion5"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="6. In the past one week, suffered from fever, cold and/or cough?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion6"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion6"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="7. In the past one week, suffered from headache or migraine?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion7"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion7"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="8. In the past one week, seek treatment from a doctor for any health problem?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion8"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion8"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="9. Are you suffering from / have ever suffered from / undergoing treatment for / had been treated for any of the following health problems?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/resultansquestion9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion9"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultquestion10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion9"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/adamina"
            android:text="10. Has anybody in your family been diagnosed with or currently being treated for
Hepatitis B or Hepatitis C?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultansquestion10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultquestion10"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/overall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/resultansquestion10"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/adamina"
            android:text="Overall Result:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overallresult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/overall"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/adamina"
            android:text=""
            android:textColor="#ff0000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/backBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overallresult"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonbg"
            android:text="Back"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>




</ScrollView>