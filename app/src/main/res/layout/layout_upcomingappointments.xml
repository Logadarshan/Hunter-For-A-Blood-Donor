<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewupcoming"
    app:cardCornerRadius="30dp"
    android:layout_marginBottom="20dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardbg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:background="@drawable/cardbg"
        android:padding="20dp">

        <TextView
            android:id="@+id/staffhosnameapp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/nameicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/staffhosdateapp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/dateicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staffhostimeapp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/timeicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staffhoslocation11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/orgicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Place"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staffhosstatus11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text="Pending...."
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/staffhoscity11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text=""
            android:visibility="invisible"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/staffhosslotid11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text=""
            android:visibility="invisible"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/staffhosbal11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text=""
            android:visibility="invisible"
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC3A0"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/staffapproveBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:background="@drawable/buttonsavebg"
                android:text="Approve" />

            <Button
                android:id="@+id/staffrejectBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/buttonrejectbg"
                android:text="Reject" />


        </LinearLayout>


    </LinearLayout>









</androidx.cardview.widget.CardView>