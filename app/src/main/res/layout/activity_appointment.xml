<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Appointment.AppointmentActivity">


    <com.shuhart.stepview.StepView
        android:id="@+id/stepview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:sv_animationType="None"
        app:sv_stepPadding="5dp"
        android:background="@drawable/newsbg"
        app:sv_selectedCircleColor="@color/purple_200"
        app:sv_selectedStepNumberColor="@color/teal_200"
        app:sv_selectedTextColor="@color/black"
        app:sv_doneCircleColor="@color/purple_700"
        app:sv_doneStepLineColor="@color/purple_500"
        app:sv_doneTextColor="@color/purple_200"
        app:sv_doneStepMarkColor="@color/purple_700"
        app:sv_typeface="@font/aclonica" />

    <com.example.hbd.Others.NonSwipeViewPager
        android:id="@+id/idviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_button"
        android:layout_below="@+id/stepview"
        android:background="@drawable/newsbg" />


    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="4dp"
        android:background="@drawable/newsbg"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_previous_step"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:enabled="false"
            android:fontFamily="@font/balthazar"
            android:text="Previous" />

        <Button
            android:id="@+id/btn_previous_next"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@color/purple_200"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:enabled="false"
            android:fontFamily="@font/balthazar"
            android:text="Next" />







    </LinearLayout>












</RelativeLayout>