<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="30dp"
    android:layout_marginBottom="20dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/donorbg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/donorbg"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/donornametext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="76dp"
            android:paddingBottom="0dp"
            android:text="Name :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/donorbloodgrouptext"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="120dp"
            android:paddingBottom="0dp"
            android:text="Blood Group :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/donoremailtext"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="164dp"
            android:paddingBottom="0dp"
            android:text="Email : "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/viewdonorprofileBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/profileicon"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/resultBtn"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/donorprofilepicture"
            android:layout_width="134dp"
            android:layout_height="152dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

        <Button
            android:id="@+id/resultBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/resulticon"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>