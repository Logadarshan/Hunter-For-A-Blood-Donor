<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9C1B1"
    tools:context=".Users.AddUserFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="60dp">


        <TextView
            android:id="@+id/textstafftitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="00dp"
            android:padding="6dp"
            android:text="Enter User details:"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textusername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:padding="6dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/uusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textusername"
            android:background="@color/white"
            android:drawableLeft="@drawable/nameicon"
            android:drawablePadding="10dp"
            android:hint="Enter user name"
            android:inputType="text"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textuseremail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/uusername"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuseremail"
            android:background="@color/white"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="10dp"
            android:hint="Enter user email"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textuserpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/useremail"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuserpassword"
            android:background="@color/white"
            android:drawableLeft="@drawable/passwordicon"
            android:drawablePadding="10dp"
            android:hint="Enter staff password"
            android:inputType="textVisiblePassword"
            android:padding="6dp"
            android:text="123456"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textuserhos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userpassword"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:text="Organization"
            android:visibility="visible"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/userostate12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuserhos"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/userhos12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userostate12"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/textusertypeadmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userhos12"
            android:text="User Type"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>


        <RadioGroup
            android:id="@+id/usertypeadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textusertypeadmin" >

            <RadioButton
                android:id="@+id/radio_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/radio_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>

        </RadioGroup>






        <Button
            android:id="@+id/adduserdataBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usertypeadmin"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/buttonsavebg"
            android:text="Add" />


    </RelativeLayout>


</ScrollView>