<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newsbg"
    tools:context=".Users.AddUserFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="60dp" >


        <TextView
            android:id="@+id/textstafftitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enter User details:"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="26dp"
            android:layout_marginTop="00dp"/>

        <TextView
            android:id="@+id/textusername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="100dp"/>

        <EditText
            android:id="@+id/uusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textusername"
            android:hint="Enter user name"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="6dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/nameicon"
            android:drawablePadding="10dp"
            />


        <TextView
            android:id="@+id/textuseremail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/uusername"
            android:text="Email"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuseremail"
            android:hint="Enter user email"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="6dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="10dp" />

        <TextView
            android:id="@+id/textuserpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/useremail"
            android:text="Password"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuserpassword"
            android:background="@color/white"
            android:drawableLeft="@drawable/passwordicon"
            android:drawablePadding="10dp"
            android:hint="Enter staff password"
            android:inputType="textVisiblePassword"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="123456"/>


        <TextView
            android:id="@+id/textuserhos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userpassword"
            android:text="Organization"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/userhos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textuserhos"
            android:hint="Enter staff organization"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="6dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/homeicon"
            android:drawablePadding="10dp" />


        <TextView
            android:id="@+id/textuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/userhos"
            android:text="User Type"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>


        <RadioGroup
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textuser" >

            <RadioButton
                android:id="@+id/radio_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/radio_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>

        </RadioGroup>


        <Button
            android:id="@+id/adduserdataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_marginTop="40dp"
            android:text="Add"
            android:background="@drawable/buttonbg"/>


    </RelativeLayout>


</ScrollView>