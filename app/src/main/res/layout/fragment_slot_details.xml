<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/newsbg"
    android:orientation="vertical"
    tools:context=".Slot.SlotDetailsFragment">

    <LinearLayout
        android:id="@+id/slotlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_newsfeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/averia_gruesa_libre"
            android:text="Appointment Slot Details"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ic"
            android:text="Date "
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/slotdate9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textdate"
            android:hint="Enter appointment date (mm/dd/yyyy)"
            android:inputType="date"
            android:textSize="16sp"
            android:focusable="false"
            android:textColor="@color/black"
            android:padding="16dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/calendaricon"
            android:drawablePadding="10dp" />

        <TextView
            android:id="@+id/texttime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ic"
            android:text="Time"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/slottime9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttime"
            android:hint="Enter appointment time (HHmm)"
            android:inputType="date"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:focusable="false"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/timeicon"
            android:drawablePadding="10dp" />

        <TextView
            android:id="@+id/textcap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ic"
            android:text="Capacity"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/slotcapacity9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttime"
            android:hint="Enter appointment capacity"
            android:inputType="date"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="16dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/capicon"
            android:drawablePadding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateslotBtn1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttonbg"
                android:text="Update"/>
            <Button
                android:id="@+id/deleteslotBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttonbg"
                android:text="Delete"/>


        </LinearLayout>





    </LinearLayout>


</ScrollView>