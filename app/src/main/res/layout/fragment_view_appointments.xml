<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF884B"
    tools:context=".Report.ViewAppointmentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF884B">


        <TextView
            android:id="@+id/title_hos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Please select the state and hospital to view appointment list :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/adamina" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerstate2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_hos"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerhos2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerstate2"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerdate2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerhos2"/>


        <Button
            android:id="@+id/searchBtn1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerdate2"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/newsbg"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/refreshBtn1"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerdate2"
            android:layout_alignEnd="@+id/searchBtn1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="156dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="132dp"
            android:background="@drawable/newsbg"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="Refresh"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />






        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyelerapps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/searchBtn1"/>


    </RelativeLayout>


</ScrollView>