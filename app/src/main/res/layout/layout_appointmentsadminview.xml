<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardadminappsview"
    app:cardCornerRadius="30dp"
    android:layout_marginBottom="20dp"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/nameofdonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/nameicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeofdonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/timeicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bloodofdonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/bloodicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:gravity="left"
            android:text="Blood Group"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statusofdonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text="Pending...."
            android:textColor="#ff0000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>









</androidx.cardview.widget.CardView>